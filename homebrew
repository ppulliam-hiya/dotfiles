export PATH=~/.homebrew/bin:~/.homebrew/sbin:$PATH

# coreutils libraries
export PATH=$(brew --prefix)/opt/coreutils/libexec/gnubin:$PATH
export MANPATH=$(brew --prefix)/opt/coreutils/libexec/gnuman:$MANPATH

# gnu-tar
export PATH=$(brew --prefix)/opt/gnu-tar/libexec/gnubin:$PATH

# gettext and openssl
export LDFLAGS="-L$(brew --prefix)/opt/gettext/lib -L$(brew --prefix)/opt/openssl/lib"
export CPPFLAGS="-I$(brew --prefix)/opt/gettext/include -I$(brew --prefix)/opt/openssl/include"

export HOMEBREW_CASK_OPTS="--caskroom=$(brew --prefix)/Caskroom"

# Don't use this by default; it will cause self-signed certificates to fail.
# export SSL_CERT_FILE=$(brew --prefix)/etc/openssl/cert.pem
